<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewAllStudents">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btn_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/calibri"
            android:layout_margin="10dp"
            android:text="Back to Results"
            android:textColor="#ffffff"
            android:padding="7dp"
            />

        <Button
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/calibri"
            android:layout_margin="10dp"
            android:text="Home"
            android:textColor="#ffffff"
            android:padding="3dp"
            />

        <Button
            android:id="@+id/btn_addresults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/calibri"
            android:layout_margin="10dp"
            android:text="Add Results"
            android:textColor="#ffffff"
            android:padding="3dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_previous_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/calibri"
        android:layout_margin="10dp"
        android:text="View Previous Results"
        android:textColor="#ffffff"
        android:padding="7dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_group"
        android:gravity="center"
        android:fontFamily="@font/calibri"
        android:text="List of Students"
        android:background="#f2f2f2"
        android:padding="10dp"
        android:layout_margin="5dp"/>

    <ListView
        android:id="@+id/lv_allgroups"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
</LinearLayout>