<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".StudentDetails"
    tools:showIn="@layout/app_bar_student_details"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STUDENT'S DETAIL"
            android:gravity="center"
            android:padding="10dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#ffffff"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_studentid"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:text="id"
            android:fontFamily="@font/calibri"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:background="@color/cardview_light_background"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_group_name"
            android:text="group"
            android:fontFamily="@font/calibri"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:background="@color/cardview_light_background"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_student_name"
            android:text="name"
            android:fontFamily="@font/calibri"
            android:padding="5dp"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_margin="10dp"
            android:background="@color/cardview_light_background"/>



        <LinearLayout

            android:id="@+id/contactlinearlyout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_studentmobile"
            android:text="mobile"
            android:fontFamily="@font/calibri"
            android:padding="5dp"
            android:layout_margin="10dp"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:background="@color/cardview_light_background"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_parentmobile"
            android:text="parent mobile"
            android:fontFamily="@font/calibri"
            android:padding="5dp"
            android:layout_margin="10dp"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:background="@color/cardview_light_background"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_email"
            android:text="email"
            android:fontFamily="@font/calibri"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:background="@color/cardview_light_background"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_stu_en_dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable"
            android:textColor="#ffffff"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Click Button to change status"
            android:padding="10dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    </ScrollView>
</RelativeLayout>